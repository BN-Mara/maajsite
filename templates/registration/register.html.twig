{% extends 'base.html.twig' %}



{% block title %}Register{% endblock %}

{% block stylesheets %}
    <link rel="stylesheet" href="css/bootstrap.css">
    <link rel="stylesheet" href="css/bootstrap.min.css">
{% endblock %}



{% block body %}
<div class="container">
    {% for flashError in app.flashes('verify_email_error') %}
        <div class="alert alert-danger" role="alert">{{ flashError }}</div>
    {% endfor %}
</div>
<section class="section ">
<div class="d-flex justify-content-center">
<div class="container card" style="width: 100rem;"> 
<br>    
<h1 class="text-center">Create Account</h1>

<br>
		
      <div class="container" style="width:100%">  

    {{ form_start(registrationForm) }}
    <div class="row">
    <div class="col-lg-6 col-sm-12">
    {{ form_row(registrationForm.firstName) }}
    </div>
    <div class="col-lg-6 col-sm-12">
    {{ form_row(registrationForm.lastName) }}
    </div>
    </div>
    <div class="row">
    <div class="col-lg-12">
    {{ form_row(registrationForm.phoneNumber) }}
        
    </div>
    </div>
    <div class="row">
    <div class="col-lg-6 col-sm-12">
        {{ form_row(registrationForm.email) }}       
     </div>
    <div class="col-lg-6 col-sm-12">
    {{ form_row(registrationForm.plainPassword,{
            label:"Password",
        }) }}
    </div>
    
     </div>
     

     
        <br>
        <button type="submit" class="btn bn-blue" style="width:100%;background-color:#B07A12">Register</button>
        
    {{ form_end(registrationForm) }}
    <br>
    </div>
    </div>
  </div>
    </section>

{% block javascripts %}


<script src="{{ asset('js/proper.js') }}"></script>
<script src="{{ asset('js/metro.js') }}"></script>
{% endblock %}



{% endblock %}
