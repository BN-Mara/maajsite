{% extends 'base.html.twig' %}



{% block title %}Subscribe{% endblock %}

{% block stylesheets %}
<link rel="stylesheet" href="css/bootstrap.css">
    <link rel="stylesheet" href="css/bootstrap.min.css">
{% endblock %}



{% block body %}
<div class="container">
    {% for flashError in app.flashes('verify_email_error') %}
        <div class="alert alert-danger" role="alert">{{ flashError }}</div>
    {% endfor %}
</div>
<section class="section">
<div class="d-flex justify-content-center">      
<h1>Subscription</h1>
</div>
		<div class="d-flex justify-content-center">
        
<div class="container" style="width: 25rem;">
    {{ form_start(subscriptionForm) }}
    
        {{ form_row(subscriptionForm.firstname) }}
        
    
        {{ form_row(subscriptionForm.lastname
            ) }}
        
      
        {{ form_row(subscriptionForm.address) }}
     

        <button type="submit" class="btn btn-primary">Subscribe</button>
        
    {{ form_end(subscriptionForm) }}
    </div>
  </div>
    </section>

{% block javascripts %}

<script src="{{ asset('js/sb-admin-2.js') }}"></script>
<script src="{{ asset('js/sb-admin-2.min.js') }}"></script>
<script src="{{ asset('js/proper.js') }}"></script>
<script src="{{ asset('js/metro.js') }}"></script>
{% endblock %}



{% endblock %}
